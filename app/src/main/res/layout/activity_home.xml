                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:layout_alignParentTop="true"
                    android:id="@+id/faninfotv"/>

                <ProgressBar
                    android:id="@+id/progressbarfan"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/faninfotv"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlfan2"
                android:layout_below="@+id/rlfan1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="ON"
                    android:visibility="gone"
                    android:id="@+id/btnonfan"
                    android:onClick="btnonfan"
                    android:background="@drawable/button_on"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="OFF"
                    android:id="@+id/btnofffan"
                    android:onClick="btnofffan"
                    android:background="@drawable/button_off"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlfan2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="45dp">
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/btnplusfan"
                    android:text="+"
                    android:textSize="40dp"
                    android:textColor="#ffffff"
                    android:onClick="btnplusfan"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_off" />


                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="-"
                    android:textSize="50dp"
                    android:textColor="#ffffff"
                    android:id="@+id/btnminusfan"
                    android:onClick="btnminusfan"
                    android:background="@drawable/button_off"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvinfo"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>


